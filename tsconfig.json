{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "noEmit": true,
    "downlevelIteration": true,
    "types": [
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@prisma/generated/*": [
        "./prisma/generated/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@types": [
        "./types.d.ts"
      ],
      "@translations/*": [
        "./translations/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "types.d.ts"
    ]
  },
  "exclude": [
    "node_modules",
    "userscripts"
  ],
  "include": [
    "next-env.d.ts",
    "types.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "skipLibCheck": true
    }
  }
}
